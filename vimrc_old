let g:jedi#show_call_signatures = "2"
inoremap <expr> <Tab> SkipClosingParentheses()

function! SkipClosingParentheses()
  let line = getline('.')
  let current_char = line[col('.')-1]

  "Ignore EOL
  if col('.') == col('$')
    return "\t"
  end

  return stridx(']})', current_char)==-1 ? "\t" : "\<Right>"
endfunction
